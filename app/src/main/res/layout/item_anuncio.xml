<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_item_anuncio"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_item"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_gradient" />

    <TextView
        android:id="@+id/lb_titulo_item"
        android:layout_marginStart="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TÍTULO"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_item" />

    <TextView
        android:id="@+id/resp_cod_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="202012042017"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/lb_cod_anuncio"
        app:layout_constraintTop_toBottomOf="@+id/lb_titulo_item" />

    <TextView
        android:id="@+id/lb_especie_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="ESPÉCIE:"
        app:layout_constraintTop_toBottomOf="@id/lb_titulo_item"
        app:layout_constraintStart_toEndOf="@id/resp_cod_item"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/resp_tipo_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CACHORRO(A)"
        android:layout_marginStart="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lb_especie_item"
        app:layout_constraintTop_toBottomOf="@+id/lb_titulo_item" />

    <TextView
        android:id="@+id/lb_sexo_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="SEXO:"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resp_tipo_item" />

    <TextView
        android:id="@+id/resp_sexo_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="4dp"
        android:text="FÊMEA"
        app:layout_constraintTop_toBottomOf="@id/resp_cod_item"
        app:layout_constraintStart_toEndOf="@id/lb_sexo_item"
        />

    <TextView
        android:id="@+id/lb_porte_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="PORTE:"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/resp_sexo_item"
       app:layout_constraintTop_toBottomOf="@id/resp_cod_item"
        />

    <TextView
        android:id="@+id/resp_porte_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PEQUENO"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/lb_porte_item"
      app:layout_constraintTop_toBottomOf="@id/lb_especie_item"
        />

    <TextView
        android:id="@+id/separador"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="2dp"
        android:text="/"
        app:layout_constraintStart_toEndOf="@id/resp_porte_item"
       app:layout_constraintTop_toBottomOf="@id/resp_tipo_item"
        />

    <TextView
        android:id="@+id/resp_idade_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="FILHOTE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resp_tipo_item"
        app:layout_constraintStart_toEndOf="@id/separador"
        app:layout_constraintHorizontal_bias="1.0"
        />

    <TextView
        android:id="@+id/lb_cidade_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOCALIDADE:"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lb_sexo_item" />

    <TextView
        android:id="@+id/resp_cidade_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="SAO JOSE DO RIO PRETO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/lb_cidade_item"
        app:layout_constraintTop_toBottomOf="@+id/resp_porte_item" />

    <TextView
        android:id="@+id/lb_estado_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="ESTADO:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lb_cidade_item" />

    <TextView
        android:id="@+id/resp_estado_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="RIO GRANDE DO SUL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/lb_estado_item"
        app:layout_constraintTop_toBottomOf="@+id/resp_cidade_item" />

    <TextView
        android:id="@+id/lb_cod_anuncio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:text="CÓD.:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lb_titulo_item" />

</androidx.constraintlayout.widget.ConstraintLayout>